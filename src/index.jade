doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet', href='//code.cdn.mozilla.net/fonts/fira.css')
    link(rel='stylesheet', href='css/mozmaker.css')
    link(rel='stylesheet', href='css/demo.css')
    title Mozmaker â€“ Demo
  body
    header
    .container
      .jumbotron
        h1.display-3 Mozmaker
        p.lead Mozilla Foundation Bootstrap 4 theme

      h2.display-4 Color

      mixin color-block(color, value)
        div(class='color-block color-block-#{color}')
          .swatch.darker 15% darkened
          .swatch.regular 100%
          .swatch.opacity-30 30%
          .swatch.opacity-10 10%

          .meta
            p.name
              strong=color
            p.value=value

      mixin text-block(weight, value)
        div(class='text-block text-block-#{weight}')
          h6 Fira Sans #{value}
          h5 ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890

      p.lead Primary Palette

      .color-blocks
        +color-block('dino-red', '#d24735')
        +color-block('firefox-orange', '#f26c23')
        +color-block('market-orange', '#f89c24')
        +color-block('flame-yellow', '#ffcd02')
        +color-block('gecko-green', '#7dc14c')
        +color-block('summit-teal', '#3bba99')
      
      .color-blocks
        +color-block('mobile-blue', '#16afe5')
        +color-block('developer-blue', '#4383bf')
        +color-block('nightly-blue', '#5a6ba4')
        +color-block('aurora-purple', '#ab5da4')
        +color-block('bikeshed-magenta', '#e14164')
        +color-block('charcoal', '#4d4f53')

      hr
      h2.display-4 Typography

      .text-blocks
        +text-block('600', 'Extra Bold')
        +text-block('500', 'Bold')
        +text-block('400', 'SemiBold')
        +text-block('300', 'Medium')
        +text-block('200', 'Regular')
        +text-block('100', 'Light')

      hr
      h2.display-4 Headings

      .typography
        .hero-unit
          h1 Hero Headline
          h2 Hero Headline 2

        .type-unit
          h1 Headline 1
          p.meta 3.8rem, Fira Sans Bold

        .type-unit
          h2 Headline 2
          p.meta 3.5rem, Fira Sans Regular

        .type-unit
          h3 Headline 3
          p.meta 2.6rem, Fira Sans Medium

        .type-unit
          h4 Headline 4
          p.meta 1.8rem, Fira Sans SemiBold

        .type-unit
          p.copy Body Copy Text
          p.meta .copy, 1.4rem, Fira Sans Medium

        .type-unit
          a(href="#") Link Text
          p.meta 1.4rem, Fira Sans Medium

        .type-unit
          p.small Small copy for notes and additional descriptive details
          p.meta .small, 1rem, Fira Sans Medium

        .type-unit
          p.intro This is introductory text for a new section of content near the top of the page. Teach how to read, write, and participate on the Web.
          p.meta .intro, 3rem, Fira Sans Regular

        .type-unit
          p.lead Make a paragraph stand out by adding .lead.
          p.meta .lead

        .type-unit
          blockquote.blockquote Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.
          p.meta .blockquote

      h2.display-4 Lists

      h5 Unstyled List (ul.list-unstyled)

      ul.list-unstyled
        li Item 1
        li Item 2
        li Item 3
        li Item 4
        li Item 5

      h5 Inline List (ul.list-inline)

      ul.list-inline
        li.list-inline-item Item 1
        li.list-inline-item Item 2
        li.list-inline-item Item 3
        li.list-inline-item Item 4
        li.list-inline-item Item 5
      
      h2 Important Links
      ul.important-links
        li: a Branding Guide
        li: a Marketing your Mozilla Club: PR - Guide
        li: a Documenting your Event

    footer
